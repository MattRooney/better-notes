<div class="notes">
  <div class="row">
    <div class="col-xs-4">
      <div class="list-group">

        {{#each model as |note|}}
          <div class="note-list-item">
            {{#link-to 'notes.note' note class="list-group-item"}}

            <h4 class="list-group-item-heading">{{note.id}}</h4>
            <p class="list-group-item-text">{{note.content}}</p>
            {{/link-to}}

          </div>
        {{/each}}
      </div>

    {{input type="text" placeholder="New Note Title" value=newNoteTitle}}
    {{input type="text" placeholder="New Note Body" value=newNoteBody}}

    </div>

    <div class="col-xs-8">
      {{outlet}}
    </div>

  </div>
</div>
